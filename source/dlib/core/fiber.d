module dlib.core.fiber;

import std.traits;
import dlib.core.memory;

version(linux):

import core.sys.posix.ucontext;

enum FiberState
{
    Initialized = 0,
    Running = 1,
    Dead = 2
}

class Fiber(YT)
{
    alias YT YieldType;
    alias extern(C) void function() CFunc;

    void function(Fiber) func;
    void delegate(Fiber) dlgt;
    bool callFunc; // function or delegate

    char[8192] st1;
    ucontext_t funcJmp;
    ucontext_t funcJmpFromYield;
    ucontext_t mainJmp;

    FiberState state = FiberState.Dead;

    YieldType yieldRetVal;
    bool yieldCalled;

    this(void function(Fiber) func)
    {
        this.func = func;
        callFunc = true;
        state = FiberState.Initialized;
    }
    
    this(void delegate(Fiber) dlgt)
    {
        this.dlgt = dlgt;
        callFunc = false;
        state = FiberState.Initialized;
    }

    void reset()
    {
        state = FiberState.Initialized;
    }

    extern(C) static void cFunc(void* param)
    {
        Fiber f = cast(Fiber)param;
        if (f.callFunc)
            f.func(f);
        else
            f.dlgt(f);
    }

    void yield(YieldType val)
    {
        yieldRetVal = val;
        yieldCalled = true;
        swapcontext(&funcJmpFromYield, &mainJmp);
    }

    YieldType call()
    {
        switch (state)
        {
            case FiberState.Initialized:
              state = FiberState.Running;
              getcontext(&funcJmp);
              funcJmp.uc_stack.ss_sp = st1.ptr;
              funcJmp.uc_stack.ss_size = st1.sizeof;
              funcJmp.uc_link = &mainJmp;
              makecontext(&funcJmp, cast(CFunc)&cFunc, 1, cast(void*)this);
              break;
            case FiberState.Dead:
              return 0;
            default:
              break;
        }

        yieldRetVal = YieldType.init;
        yieldCalled = false;
        swapcontext(&mainJmp, &funcJmp);

        if (yieldCalled)
        {
            funcJmp = funcJmpFromYield;
            return yieldRetVal;
        }

        state = FiberState.Dead;
        return YieldType.init;
    }
}

auto fiber(alias func)() 
  if ((isFunction!func || isDelegate!func) && 
     arity!func == 1 && 
     isInstanceOf!(Fiber, Parameters!func[0]))
{
    return New!(Fiber!(Parameters!func[0].YieldType))(&func);
}

version(unittest)
void test(Fiber!int f)
{
    f.yield(100);
    f.yield(50);
}

unittest
{
    auto f = fiber!test;
    assert(f.call() == 100);
    assert(f.call() == 50);
    Delete(f);
}

